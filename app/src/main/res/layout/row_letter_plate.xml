<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vSeparator"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/llCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_circle_disable"
            android:padding="4dp">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_enable"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_done"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/llCheck"
            android:layout_toLeftOf="@+id/llCheck"
            android:layout_toRightOf="@+id/llAccountant"
            android:layout_toStartOf="@id/llAccountant"
            android:text="Lomo Saltado con pescado"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/llCheck"
            android:layout_toRightOf="@+id/llCheck"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="s/12.00" />

        <LinearLayout
            android:id="@+id/llAccountant"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btnMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAccountant"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLess"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/divider_horizontal_textfield" />
</RelativeLayout>