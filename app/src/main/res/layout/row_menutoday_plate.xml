<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vSeparator"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/llCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_circle_disable"
            android:padding="4dp">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_enable"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/check_24"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/llCheck"
            android:layout_toLeftOf="@+id/tvPrice"
            android:layout_toRightOf="@+id/llCheck"
            android:layout_toStartOf="@+id/tvPrice"
            tools:text="Lomo Saltado con pescado"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@android:color/black" />

        <TextView
            android:fontFamily="@font/ralewaybold"
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="s/12.00" />

    </RelativeLayout>

    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/divider_horizontal_textfield" />
</RelativeLayout>